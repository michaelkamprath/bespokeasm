{
  "autoClosingPairs": [
    {
      "close": "]",
      "open": "["
    },
    {
      "close": ")",
      "open": "("
    },
    {
      "close": "'",
      "notIn": [
        "string",
        "comment"
      ],
      "open": "'"
    },
    {
      "close": "\"",
      "notIn": [
        "string"
      ],
      "open": "\""
    }
  ],
  "brackets": [
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ]
  ],
  "comments": {
    "blockComment": [
      ";",
      ";"
    ],
    "lineComment": ";"
  },
  "folding": {
    "markers": {
      "end": "^.*$(?=\\v^(?:(?:\\w|\\_){1}[\\w\\d_]*\\:|\\;))",
      "start": "^(?:\\w|\\_){1}[\\w\\d_]*\\:"
    }
  },
  "onEnterRules": [
    {
      "action": {
        "indent": "indent"
      },
      "beforeText": "^\\s*(?:\\.|_|\\w){1}[\\w\\d_]*(?:\\:)"
    },
    {
      "action": {
        "appendText": "; ",
        "indent": "none"
      },
      "beforeText": "^\\;.*$"
    }
  ],
  "surroundingPairs": [
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ],
    [
      "'",
      "'"
    ],
    [
      "\"",
      "\""
    ]
  ]
}
