{
  "cstr": {
    "body": [
      ".cstr \"$1\""
    ],
    "description": "A null-terminated string",
    "prefix": [
      ".cstr",
      "cstr"
    ]
  },
  "fill": {
    "body": [
      ".fill $1, $2"
    ],
    "description": "Fill n-bytes with given value",
    "prefix": [
      ".fill",
      "fill"
    ]
  },
  "include": {
    "body": [
      "#include \"$1\""
    ],
    "description": "Include another source file",
    "prefix": [
      "#include"
    ]
  },
  "require": {
    "body": [
      "#require \"$1 >= $2\""
    ],
    "description": "Require certain language version",
    "prefix": [
      "#require"
    ]
  },
  "create-scope": {
    "body": [
      "#create-scope \"$1\" prefix=\"$2\""
    ],
    "description": "Create a named label scope with custom prefix",
    "prefix": [
      "#create-scope"
    ]
  },
  "use-scope": {
    "body": [
      "#use-scope \"$1\""
    ],
    "description": "Activate a named label scope",
    "prefix": [
      "#use-scope"
    ]
  },
  "deactivate-scope": {
    "body": [
      "#deactivate-scope \"$1\""
    ],
    "description": "Deactivate a named label scope",
    "prefix": [
      "#deactivate-scope"
    ]
  }
}
